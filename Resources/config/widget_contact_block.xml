<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
        <parameter key="neutron_contact_block.widget.builder.class">Neutron\Widget\ContactBlockBundle\ContactBlockWidget</parameter>
        <parameter key="neutron_contact_block.doctrine.event_subscriber.widget_contact_block.class">Neutron\Widget\ContactBlockBundle\Doctrine\EventSubscriber\WidgetContactBlockEventSubscriber</parameter>
        <parameter key="neutron_contact_block.doctrine.widget_contact_block_manager.default.class">Neutron\Widget\ContactBlockBundle\Doctrine\WidgetContactBlockManager</parameter>
        <parameter key="neutron_contact_block.controller.backend.widget_contact_block.default.class">Neutron\Widget\ContactBlockBundle\Controller\Backend\WidgetContactBlockController</parameter>
        <parameter key="neutron_contact_block.controller.frontend.widget_contact_block.default.class">Neutron\Widget\ContactBlockBundle\Controller\Frontend\WidgetContactBlockController</parameter>
        <parameter key="neutron_contact_block.datagrid.builder.widget_contact_block_management.class">Neutron\Widget\ContactBlockBundle\DataGrid\WidgetContactBlockManagementDataGrid</parameter>
        <parameter key="neutron_contact_block.datagrid.builder.contact_block_multi_select_sortable.class">Neutron\Widget\ContactBlockBundle\DataGrid\ContactBlockMultiSelectSortableDataGrid</parameter>
        <parameter key="neutron_contact_block.form.backend.type.widget_contact_block.class">Neutron\Widget\ContactBlockBundle\Form\Backend\Type\WidgetContactBlockType</parameter>
        <parameter key="neutron_contact_block.form.backend.type.widget_contact_block.general.class">Neutron\Widget\ContactBlockBundle\Form\Backend\Type\WidgetContactBlock\GeneralType</parameter>
        <parameter key="neutron_contact_block.form.backend.handler.widget_contact_block.default.class">Neutron\Widget\ContactBlockBundle\Form\Backend\Handler\WidgetContactBlockHandler</parameter>
    </parameters>

    <services>
        <service id="neutron_contact_block.widget.builder" 
        	class="%neutron_contact_block.widget.builder.class%"
        >
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="neutron_mvc.widget.factory" />
            <argument type="service" id="translator" />
            <argument>%neutron_contact_block.enable%</argument>
            <argument>%neutron_contact_block.translation_domain%</argument>
        </service>
                
        <service id="neutron_contact_block.widget" 
        	class="Neutron\MvcBundle\Widget\WidgetFactory"
        	factory-service="neutron_contact_block.widget.builder"
        	factory-method="build"
        >
        	<tag name="neutron.widget" alias="neutron.widget.contact_block" />
        </service>
        
        <service id="neutron_contact_block.doctrine.event_subscriber.widget_contact_block"
        	class="%neutron_contact_block.doctrine.event_subscriber.widget_contact_block.class%"
        >
        	<argument type="service" id="neutron_contact_block.widget" />
        	
        	<tag name="doctrine.event_subscriber" connection="default" />
        </service>
        
        <service id="neutron_contact_block.doctrine.widget_contact_block_manager.default" 
        	class="%neutron_contact_block.doctrine.widget_contact_block_manager.default.class%">
            <call method="setClassName">
            	<argument>%neutron_contact_block.widget_contact_block_class%</argument>
            </call>
            <call method="setObjectManager">
            	<argument type="service" id="object_manager" />
            </call>
        </service>
        
        <service id="neutron_contact_block.controller.backend.widget_contact_block.default" 
            class="%neutron_contact_block.controller.backend.widget_contact_block.default.class%"
        >	
            <call method="setContainer">
            	<argument type="service" id="service_container" />
            </call>    
        </service>
        
        <service id="neutron_contact_block.controller.frontend.widget_contact_block.default" 
            class="%neutron_contact_block.controller.frontend.widget_contact_block.default.class%"
        >	
            <call method="setContainer">
            	<argument type="service" id="service_container" />
            </call>    
        </service>
        
        <service id="neutron_contact_block.datagrid.builder.widget_contact_block_management" 
        	class="%neutron_contact_block.datagrid.builder.widget_contact_block_management.class%"
        	scope="request"
       	>
        	<argument type="service" id="neutron_data_grid.factory" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="router" />
        	<argument type="service" id="neutron_contact_block.widget_contact_block_manager" />
        	<argument>%neutron_contact_block.translation_domain%</argument>
        </service>
        
        <service id="neutron_contact_block.datagrid.widget_contact_block_management" 
            class="Neutron\Bundle\DataGridBundle\DataGrid\DataGrid"
            factory-service="neutron_contact_block.datagrid.builder.widget_contact_block_management"
            factory-method="build"
        >
            <tag name="neutron_data_grid.datagrid" alias="neutron_widget_contact_block_management" />
        </service>
        
        <service id="neutron_contact_block.datagrid.builder.contact_block_multi_select_sortable" 
        	class="%neutron_contact_block.datagrid.builder.contact_block_multi_select_sortable.class%"
        	scope="request"
       	>
        	<argument type="service" id="neutron_data_grid.factory" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="router" />
        	<argument type="service" id="neutron_contact_block.contact_block_manager" />
        	<argument>%neutron_contact_block.translation_domain%</argument>
        </service>
        
        <service id="neutron_contact_block.datagrid.contact_block_multi_select_sortable" 
            class="Neutron\Bundle\DataGridBundle\DataGrid\DataGrid"
            factory-service="neutron_contact_block.datagrid.builder.contact_block_multi_select_sortable"
            factory-method="build"
        >
            <tag name="neutron_data_grid.datagrid" alias="neutron_contact_block_multi_select_sortable" />
        </service>
        
        <service id="neutron_contact_block.form.backend.widget_contact_block" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%neutron_contact_block.form.backend.name.widget_contact_block%</argument>
            <argument>%neutron_contact_block.form.backend.type.widget_contact_block%</argument>
        </service>
        
        <service id="neutron_contact_block.form.backend.type.widget_contact_block"
        	class="%neutron_contact_block.form.backend.type.widget_contact_block.class%"
        >                  
            <tag name="form.type" alias="neutron_backend_widget_contact_block" />
        </service>
        
        <service id="neutron_contact_block.form.backend.type.widget_contact_block.general" 
			class="%neutron_contact_block.form.backend.type.widget_contact_block.general.class%"
			scope="request"
		>
            <call method="setDataGrid">
            	<argument type="service" id="neutron_contact_block.datagrid.contact_block_multi_select_sortable" />
            </call>
            
            <call method="setEventSubscriber">
            	<argument type="service" id="neutron_form.subscriber.multi_select_sortable" />
            </call>
            
            <call method="setWidgetContactBlockClass">
            	<argument>%neutron_contact_block.widget_contact_block_class%</argument>
            </call>
            
            <call method="setContactBlockClass">
            	<argument>%neutron_contact_block.contact_block_class%</argument>
            </call>
            
            <call method="setContactBlockReferenceClass">
            	<argument>%neutron_contact_block.contact_block_reference_class%</argument>
            </call>
            
            <call method="setTemplates">
            	<argument>%neutron_contact_block.widget_contact_block_templates%</argument>
            </call>
            
            <call method="setTranslationDomain">
            	<argument>%neutron_contact_block.translation_domain%</argument>
            </call>
            
            <tag name="form.type" alias="neutron_backend_widget_contact_block_general" />
		</service>
		
	    <service id="neutron_contact_block.form.backend.handler.widget_contact_block.default" 
        	class="%neutron_contact_block.form.backend.handler.widget_contact_block.default.class%"
        >
        	<call method="setContainer">
        		<argument type="service" id="service_container" />
        	</call>
        	<call method="setForm">
        		<argument type="service" id="neutron_contact_block.form.backend.widget_contact_block" />
        	</call>
        	<call method="setTranslationDomain">
        		<argument>%neutron_contact_block.translation_domain%</argument>
        	</call>
        </service>

    </services>
    
</container>
